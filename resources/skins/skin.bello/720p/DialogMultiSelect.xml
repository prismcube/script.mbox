<window>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="3900">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>350</posx>
			<posy>50</posy>
			<!-- Panel -->
			<control type="image">
				<posx>-170</posx>
				<posy>-190</posy>
				<width>913</width>
				<height>960</height>
				<texture>dialogs/other/bg_textviewer.png</texture>
			</control>
			<control type="button" id="3901">
				<description>Close Window</description>
				<posx>525</posx>
				<posy>-10</posy>
				<width>60</width>
				<height>28</height>
				<font>-</font>
				<texturenofocus>DialogCloseButton_nf.png</texturenofocus>
				<texturefocus>DialogCloseButton_fo.png</texturefocus>
				<onleft>1003950</onleft>
				<onright>1003951</onright>
				<onup>3904</onup>
				<ondown>1003950</ondown>
			</control>
			<control type="label" id="3902">
				<description>Title</description>
				<posx>0</posx>
				<posy>30</posy>
				<width>570</width>
				<height>30</height>
				<font>FontSize_36</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="3903">
				<textcolor>grey2</textcolor>
				<label>$INFO[Control.GetLabel]</label>
				<visible>false</visible>
			</control>
			<control type="group">
				<control type="label">
					<posx>566</posx>
					<posy>525</posy>
					<width>300</width>
					<height>35</height>
					<font>FontSize_18</font>
					<align>right</align>
					<aligny>center</aligny>
					<scroll>true</scroll>
					<textcolor>99white</textcolor>
					<label>([COLOR=blue]$INFO[Control.GetLabel(3903)]/$INFO[Container(1003950).NumItems][/COLOR]) $ADDON[script.mbox 1106] - $ADDON[script.mbox 1107] ([COLOR=blue]$INFO[Container(1003950).CurrentPage]/$INFO[Container(1003950).NumPages][/COLOR])</label>
				</control>
			</control>
			<control type="button" id="3904">
				<posx>0</posx>
				<posy>540</posy>
				<width>160</width>
				<height>40</height>
				<label>$ADDON[script.mbox 1022]</label>
				<font>FontSize_22</font>
				<textcolor>99grey</textcolor>
				<focusedcolor>white</focusedcolor>
				<align>center</align>
				<texturenofocus border="10,0,10,0">dialogs/keyboard/button_nf.png</texturenofocus>
				<texturefocus border="10,0,10,0">dialogs/keyboard/button_fo.png</texturefocus>
				<onleft>1003950</onleft>
				<onright>1003951</onright>
				<onup>1003950</onup>
				<ondown>3901</ondown>
			</control>
			<!-- Hotkeys -->
			<control type="group">
				<posx>0</posx>
				<posy>592</posy>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>20</width>
					<height>20</height>
					<texture flipx="true">OSDPlayNF.png</texture>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>-6</posy>
					<width>570</width>
					<height>30</height>
					<font>FontSize_14</font>
					<align>left</align>
					<scroll>true</scroll>
					<textcolor>77white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$ADDON[script.mbox 1138]</label>
				</control>
			</control>
			<control type="group">
				<posx>-20</posx>
				<posy>30</posy>
				<include>DefaultSelectList</include>
			</control>
		</control>
	</controls>
</window>
