<window>
	<defaultcontrol always="true">9001</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<include>DefaultDialogCloseEffect</include>
			<posx>360</posx>
			<posy>50</posy>
			<!-- Panel -->
			<control type="image">
				<posx>-140</posx>
				<posy>-190</posy>
				<width>850</width>
				<height>903</height>
				<texture>dialogs/other/bg_textviewer.png</texture>
			</control>
			<control type="button" id="109">
				<description>Close Window</description>
				<posx>505</posx>
				<posy>-22</posy>
				<width>60</width>
				<height>28</height>
				<font>-</font>
				<texturenofocus>DialogCloseButton_nf.png</texturenofocus>
				<texturefocus>DialogCloseButton_fo.png</texturefocus>
				<onleft>9001</onleft>
				<onright>8001</onright>
				<onup>100</onup>
				<ondown>9001</ondown>
			</control>
			<control type="label" id="101">
				<description>Title</description>
				<posx>20</posx>
				<posy>10</posy>
				<width>570</width>
				<height>30</height>
				<font>FontSize_36</font>
				<label>$INFO[Control.GetLabel]</label>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label">
				<posx>545</posx>
				<posy>480</posy>
				<width>300</width>
				<height>35</height>
				<font>FontSize_18</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
<!--				<textcolor>blue</textcolor>
				<label>([COLOR=blue]$INFO[Window.Property(SelectedPosition)][/COLOR]) $ADDON[script.mbox 1106] - $ADDON[script.mbox 1107] ([COLOR=blue]$INFO[Container(9001).CurrentPage]/$INFO[Container(9001).NumPages][/COLOR])</label>-->
				<label>$INFO[Window.Property(SelectedPosition)] $ADDON[script.mbox 1106]</label>
				<textcolor>blue</textcolor>
				<visible>Control.IsVisible(9001)</visible>
			</control>
			<control type="button" id="100">
				<posx>20</posx>
				<posy>490</posy>
				<width>160</width>
				<height>40</height>
				<label>$ADDON[script.mbox 1022]</label>
				<font>FontSize_22</font>
				<textcolor>99grey</textcolor>
				<focusedcolor>white</focusedcolor>
				<align>center</align>
				<texturenofocus border="10,0,10,0">dialogs/keyboard/button_nf.png</texturenofocus>
				<texturefocus border="10,0,10,0">dialogs/keyboard/button_fo.png</texturefocus>
				<onleft>9001</onleft>
				<onright>8001</onright>
				<onup>9001</onup>
				<ondown>3800</ondown>
			</control>
			<!-- Hotkey -->
			<control type="group">
				<posx>20</posx>
				<posy>544</posy>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>20</width>
					<height>20</height>
					<texture flipx="true">OSDPlayNF.png</texture>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>-6</posy>
					<width>570</width>
					<height>30</height>
					<font>FontSize_14</font>
					<align>left</align>
					<scroll>true</scroll>
					<textcolor>77white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$ADDON[script.mbox 1138]</label>
				</control>
			</control>
			<control type="list" id="9001">
				<posx>10</posx>
				<posy>65</posy>
				<width>600</width>
				<height>420</height>
				<onleft>100</onleft>
				<onright>8001</onright>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<pagecontrol>8001</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>0</focusposition>
				<movement>2</movement>
				<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(8001)">Conditional</animation>
				<itemlayout height="70" width="590">
					<!-- Selection Icon -->
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>
					<!-- Channel Name-->
					<control type="label">
						<posx>40</posx>
						<posy>0</posy>
						<width>360</width>
						<height>30</height>
						<font>FontSize_20</font>
						<textcolor>77white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Record Name-->
					<control type="label">
						<posx>40</posx>
						<posy>30</posy>
						<width>360</width>
						<height>30</height>
						<font>FontSize_20B</font>
						<textcolor>77white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<!-- Start Time -->
					<control type="label">
						<posx>500</posx>
						<posy>0</posy>
						<width>250</width>
						<height>30</height>
						<font>FontSize_20B</font>
						<textcolor>77white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>						
						<label>$INFO[ListItem.Property(StartTime)]</label>
					</control>
					<!-- Duration -->
					<control type="label">
						<posx>500</posx>
						<posy>30</posy>
						<width>200</width>
						<height>30</height>
						<font>FontSize_20B</font>
						<textcolor>77white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(Duration)]</label>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="590">
					<control type="image">
						<posx>3</posx>
						<posy>0</posy>
						<width>525</width>
						<height>68</height>
						<texture border="0,2,0,2">buttons/settings_fo.png</texture>
						<include>DefaultVisibleFadeEffect</include>
					</control>
					<!-- Selection Icon -->
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>
					<!-- Channel Name-->
					<control type="label">
						<posx>40</posx>
						<posy>0</posy>
						<width>360</width>
						<height>30</height>
						<font>FontSize_20</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Record Name-->
					<control type="label">
						<posx>40</posx>
						<posy>30</posy>
						<width>360</width>
						<height>30</height>
						<font>FontSize_20B</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<!-- Start Time -->
					<control type="label">
						<posx>500</posx>
						<posy>0</posy>
						<width>250</width>
						<height>30</height>
						<font>FontSize_20B</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>						
						<label>$INFO[ListItem.Property(StartTime)]</label>
					</control>
					<!-- Duration -->
					<control type="label">
						<posx>500</posx>
						<posy>30</posy>
						<width>200</width>
						<height>30</height>
						<font>FontSize_20B</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(Duration)]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="8001">
				<posx>547</posx>
				<posy>75</posy>
				<width>10</width>
				<height>400</height>
				<include>DefaultWindowFade</include>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">views/scrollbar/scrollbar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">views/scrollbar/scrollbar.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<ondown></ondown>
				<onup></onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>
