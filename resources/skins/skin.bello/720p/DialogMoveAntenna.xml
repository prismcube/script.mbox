<window>
	<defaultcontrol always="true">102</defaultcontrol>
	<onload>SetProperty(ItemHeight,40)</onload>					<!--Input Item Height-->
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>600</posx>
			<posy>200</posy>
			<include>DefaultDialogCloseEffect</include>
			<!-- Top, Middle and Bottom Panels -->
			<control type="image">
				<posx>0</posx>
				<posy>-30</posy>
				<width>350</width>
				<height>30</height>
				<texture border="45,45,45,0">DialogContext_Top.png</texture>
			</control>
			<control type="image" id="100">
				<posx>0</posx>
				<posy>0</posy>
				<width>350</width>
				<texture border="25,5,25,5">DialogContext_Middle.png</texture>
			</control>
			<control type="image" id="101">
				<posx>0</posx>
				<width>350</width>
				<height>25</height>
				<texture border="20,0,19,20">DialogContext_Bottom.png</texture>
			</control>
			<control type="list" id="102">
				<posx>20</posx>
				<posy>5</posy>
				<width>310</width>
				<height>500</height>						<!--Change Property ItemHeight * MAX_ITEM(12) -->
				<onup>102</onup>
				<ondown>102</ondown>
				<itemlayout width="310" height="40" >		<!--Change ProPerty ItemHeight-->
					<control type="image">
						<posx>5</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<font>FontSize_20</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>55white</textcolor>
						<texture>$INFO[ListItem.Property(HotKey)]</texture>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<control type="label">
						<posx>155</posx>
						<posy>0</posy>
						<width>310</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<font>FontSize_20</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>55white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="297" height="40">		<!--Change ProPerty ItemHeight-->
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>310</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<texture border="0,2,0,2">buttons/settings_fo.png</texture>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<font>FontSize_20</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>55white</textcolor>
						<texture>$INFO[ListItem.Property(HotKey)]</texture>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<control type="label">
						<posx>155</posx>
						<posy>0</posy>
						<width>310</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<font>FontSize_20</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
