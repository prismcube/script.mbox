						<control type="label">
							<posx>2</posx>
							<posy>0</posy>
							<width>30</width>
							<height>30</height>
							<font>font10</font>
							<label></label>
						</control>
					</control>
					<control type="group">
						<width>30</width>
						<height>30</height>
						<visible>substring(Window.Property(iHotkeyGreen),true)</visible>
						<control type="image">
							<width>30</width>
							<height>30</height>
							<texture>settings-button-nofocus-green.png</texture>
						</control>
						<control type="label">
							<posx>3</posx>
							<posy>0</posy>
							<width>30</width>
							<height>30</height>
							<font>font10</font>
							<label>LST</label>
						</control>
					</control>
					<control type="group">
						<width>30</width>
						<height>30</height>
						<visible>substring(Window.Property(iHotkeyYellow),true)</visible>
						<control type="image">
							<width>30</width>
							<height>30</height>
							<texture>settings-button-nofocus-yellow.png</texture>
						</control>
						<control type="label">
							<posx>3</posx>
							<posy>0</posy>
							<width>30</width>
							<height>30</height>
							<font>font10</font>
							<label></label>
						</control>
					</control>
					<control type="group">
						<width>30</width>
						<height>30</height>
						<visible>substring(Window.Property(iHotkeyBlue),true)</visible>
						<control type="image">
							<width>30</width>
							<height>30</height>
							<texture>settings-button-nofocus.png</texture>
						</control>
						<control type="label">
							<posx>3</posx>
							<posy>0</posy>
							<width>30</width>
							<height>30</height>
							<font>font10</font>
							<label>BOK</label>
