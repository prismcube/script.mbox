					<posx>1190</posx>
					<posy>565</posy>
					<width>300</width>
					<height>40</height>
					<itemgap>5</itemgap>
					<visible>true</visible>
					<orientation>horizontal</orientation>
					<control type="group">
						<width>30</width>
						<height>30</height>
						<visible>substring(Window.Property(iHotkeyRed),true)</visible>
						<control type="image">
							<width>30</width>
							<height>30</height>
							<texture>settings-button-nofocus-red.png</texture>
