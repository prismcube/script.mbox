<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="8000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<include>DefaultDialogCloseEffect</include>
			<control type="image" id="9001">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>610</width>
				<height>520</height>
				<texture border="40">DialogBack.png</texture>
			</control>
			<include>DefaultDialogCommonSetting</include>
			<control type="group" id="9000">
				<posx>40</posx>

				<!-- Timer Mode -->
				<include>DialogSpinEx03</include>

				<!-- Recording Type -->
				<include>DialogSpinEx01</include>
				
				<!-- Recording Name -->
				<include>DialogInput01</include>

				<!-- Weekly -->
				<include>DialogSpinDay</include>

				<!-- Date -->
				<include>DialogSpinEx02</include>

				<!--StartTime -->
				<include>DialogInput02</include>

				<!--EndTim -->
				<include>DialogInput03</include>

				<!-- Record path -->
				<include>DialogInput04</include>
				<control type="group">
					<posx>210</posx>
					<posy>390</posy>
					<visible>Control.IsVisible(1006240)</visible>
					<control type="progress" id="300">
						<description>Progressbar</description>
						<posx>0</posx>
						<posy>15</posy>
						<width>100</width>
						<height>16</height>
						<texturebg border="6,0,6,0">OSDProgressBack.png</texturebg>
						<midtexture border="6,0,6,0">OSDProgressMidLight.png</midtexture>
					</control>
					<control type="label">
						<posx>105</posx>
						<posy>2</posy>
						<width>150</width>
						<height>40</height>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(NetVolumeUse)]</label>
						<textcolor>grey3</textcolor>
						<font>font12</font>
					</control>
					<control type="label">
						<posx>320</posx>
						<posy>0</posy>
						<width>100</width>
						<height>40</height>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(NetVolumeConnect)]</label>
						<textcolor>grey3</textcolor>
						<font>font13</font>
					</control>
				</control>
				<control type="group">
					<posx>0</posx>
					<posy>40</posy>

					<!-- OK/Cancel -->
					<include>DefaultSettingDialogButtonOKCancel</include>
				</control>

			</control>


		</control>
	</controls>
</window>

