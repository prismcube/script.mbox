<window>
	<defaultcontrol always="true">102</defaultcontrol>
	<onload>SetProperty(ItemHeight,38)</onload>					<!--Input Item Height-->
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="9000">
			<posx>600</posx>
			<posy>200</posy>
			<include>DefaultDialogCloseEffect</include>
			<control type="image">
				<description>background top image</description>
				<posx>0</posx>
				<posy>-54</posy>
				<width>370</width>
				<height>54</height>
				<texture border="45,45,45,0">DialogContextTop.png</texture>
			</control>
			<control type="button" id="103">
				<description>Close Window button</description>
				<posx>260</posx>
				<posy>-24</posy>
				<width>64</width>
				<height>32</height>
				<onup>102</onup>
				<ondown>102</ondown>
				<onleft>102</onleft>
				<onright>102</onright>
				<label>-</label>
				<font>-</font>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
			</control>
			<control type="image">
				<posx>34</posx>
				<posy>-6</posy>
				<width>297</width>
				<height>4</height>
				<texture>separator.png</texture>
			</control>
			<control type="image" id="100">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>370</width>
				<texture border="45,0,45,0">DialogContextMiddle.png</texture>
			</control>
			<control type="image" id="101">
				<description>background bottom image</description>
				<posx>0</posx>
				<width>370</width>
				<height>50</height>
				<texture border="45,0,45,49">DialogContextBottom.png</texture>
			</control>
			<control type="list" id="102">
				<posx>34</posx>
				<posy>0</posy>
				<width>297</width>
				<height>380</height>						<!--Change ProPerty ItemHeight * 10 -->
				<onup>102</onup>
				<ondown>102</ondown>
				<onleft>103</onleft>
				<onright>103</onright>
				<itemlayout width="297" height="38" >		<!--Change ProPerty ItemHeight-->
					<control type="label">
						<posx>150</posx>
						<posy>0</posy>
						<width>297</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<font>fontContextMenu</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>		
				</itemlayout>
				<focusedlayout width="297" height="38">		<!--Change ProPerty ItemHeight-->
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>297</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<texture border="5">button-focus.png</texture>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<control type="label">
						<posx>150</posx>
						<posy>0</posy>
						<width>297</width>
						<height>38</height>					<!--Change ProPerty ItemHeight-->
						<font>fontContextMenu</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>


