<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>335</posx>
		<posy>35</posy>
	</coordinates>
	<include>DefaultDialogEffect</include>
	<controls>
		<control type="group">
            <animation condition="IsEmpty(window.property(AnimationWaitingDialogOnClose))" type="conditional" reversible="false">
                <effect type="fade" start="100" end="0" time="300" />
            </animation>
			<control type="image" id="100">
				<description>background image</description>
				<posx>0</posx>
				<posy>100</posy>
				<width>610</width>
				<height>240</height>
				<texture border="40">confluence/DialogBack.png</texture>
			</control>
			<include>DefaultDialogCommonSetting</include>
		</control>

		<control type="group" id="9000">		
			<control type="list" id="200">
				<posx>30</posx>
				<posy>170</posy>
				<width>550</width>
				<height>140</height>
				<onleft>300</onleft>
				<onright>300</onright>
				<onup>200</onup>
				<ondown>200</ondown>
				<pagecontrol>61</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>0</focusposition>
				<movement>2</movement>
				<visible>true</visible>
				<enable>true</enable>
				<animation effect="slide" start="0,0" end="10,0" time="0" condition="true">Conditional</animation>
				<itemlayout height="70" width="550">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>71</height>
						<texture border="0,2,0,2">confluence/MenuItemNF.png</texture>
					</control>
					<control type="label">
						<posx>30</posx>
						<posy>0</posy>
						<width>520</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>grey3</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" start="0,0" end="16,0" delay="0" time="0" condition="false">conditional</animation>
					</control>
					<control type="label">
						<posx>550</posx>
						<posy>0</posy>
						<width>400</width>
						<height>40</height>
						<font>font12</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
						<visible>false</visible>
					</control>	
				</itemlayout>
				<focusedlayout height="70" width="550">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>71</height>
						<texture border="0,2,0,2">confluence/MenuItemNF.png</texture>
						<visible>!Control.HasFocus(200)</visible>
						<animation effect="fade" time="300">Visible</animation>
						<animation effect="fade" time="300">Hidden</animation>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>71</height>
						<texture border="0,2,0,2">confluence/MenuItemFO.png</texture>
						<visible>Control.HasFocus(200)</visible>
						<animation effect="fade" time="300">Visible</animation>
						<animation effect="fade" time="300">Hidden</animation>
					</control>
					<control type="label">
						<posx>30</posx>
						<posy>0</posy>
						<width>520</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>						
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<posx>500</posx>
						<posy>0</posy>
						<width>400</width>
						<height>40</height>
						<font>font12</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
						<visible>false</visible>
						<animation effect="slide" start="0,0" end="16,0" delay="0" time="0" condition="true">conditional</animation>
					</control>
				</focusedlayout>
			</control>
		</control>	
	</controls>
</window>

