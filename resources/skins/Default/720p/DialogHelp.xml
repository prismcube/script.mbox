<window>
	<defaultcontrol always="true">7001</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<onload>SetProperty(HelpString,Help_Strings.xml)</onload>
	<controls>
		<!-- Default Background -->
		<control type="image">
			<posx>-13</posx>
			<posy>-7</posy>
			<width>1306</width>
			<height>734</height>
			<texture>backgrounds/SKINDEFAULT.jpg</texture>
		</control>

		<!-- Top Bar -->
		<control type="image">
			<posx>-13</posx>
			<posy>-7</posy>
			<width>1306</width>
			<height>62</height>
			<texture border="0,0,20,0">HeaderBack.png</texture>
		</control>

		<!-- Panel -->
		<control type="image">
			<posx>-13</posx>
			<posy>535</posy>
			<width>1306</width>
			<height>192</height>
			<texture border="0,0,20,0">FooterBack.png</texture>
		</control>

		<!-- Top Bar Info -->
		<control type="group" id="9000">
			<include>DefaultDialogCloseEffect</include>
			<control type="group">
				<control type="label" id="1002">
					<description>Page Title</description>
					<posx>230</posx>
					<posy>5</posy>
					<width>820</width>
					<height>30</height>
					<font>font14</font>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>blue</textcolor>
				</control>
				<control type="label" id="1003">
					<description>Path</description>
					<posx>20</posx>
					<posy>5</posy>
					<width>500</width>
					<height>30</height>
					<font>font10</font>
					<textcolor>white</textcolor>
					<align>left</align>
					<aligny>center</aligny>
				</control>
				<control type="label" id="1004">
					<description>CurrentPage/NumPages</description>
					<posx>1260</posx>
					<posy>5</posy>
					<width>100</width>
					<height>30</height>
					<font>font12_title</font>
					<textcolor>white</textcolor>
					<align>right</align>
					<aligny>center</aligny>
				</control>
			</control>

			<!-- Help Image & Messages -->
			<control type="group" id="8500">
				<control type="image" id="100">
					<texture border="20">$INFO[Window.Property(imagepath)]</texture>
					<visible>Control.IsVisible(8500)</visible>
				</control>
				<control type="textbox" id="200">
					<description>Left Textbox</description>
					<font>font12</font>
					<textcolor>white</textcolor>
					<label>$INFO[Window.Property(label1)]</label>
					<visible>Control.IsVisible(8500)</visible>
					<align>left</align>
					<aligny>top</aligny>
					<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				</control>
				<control type="textbox" id="201">
					<description>Right Textbox</description>
					<font>font12</font>
					<textcolor>white</textcolor>
					<label>$INFO[Window.Property(label2)]</label>
					<visible>Control.IsVisible(8500)</visible>
					<align>left</align>
					<aligny>top</aligny>
					<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				</control>
			</control>

			<!-- Left & Right Buttons -->
			<control type="group">
				<control type="button" id="7000">
					<description>Prev</description>
					<posx>60</posx>
					<posy>290</posy>
					<width>60</width>
					<height>50</height>
					<texturenofocus border="5">Arrow-left.png</texturenofocus>
					<texturefocus border="5">Arrow-left-focus.png</texturefocus>
				</control>
				<control type="button" id="7001">
					<description>Next</description>
					<posx>1140</posx>
					<posy>290</posy>
					<width>60</width>
					<height>50</height>
					<texturenofocus border="5">Arrow-right.png</texturenofocus>
					<texturefocus border="5">Arrow-right-focus.png</texturefocus>
				</control>
			</control>
		</control>
	</controls>
</window>
