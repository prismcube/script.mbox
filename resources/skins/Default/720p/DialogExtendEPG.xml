<window>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group">
		<include>DefaultDialogCloseEffect</include>			
			<posx>90</posx>
			<posy>30</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1100</width>
				<height>520</height>
				<texture border="20">DialogBack.png</texture>
			</control>

			<control type="label" id="100">
				  <description>EPG Title</description>
				  <posx>80</posx>
				  <posy>30</posy>
				  <width>950</width>
				  <height>100</height>
				  <visible>true</visible>
				  <colordiffuse>FFFFFFFF</colordiffuse>
				  <font>font35_title</font>
				  <textcolor>FFFFFFFF</textcolor>
				  <label>$INFO[Window.Property(EPGTitle)]</label>
			</control>

			<control type="textbox" id="101">
				  <description>EPG Description</description>
				  <posx>80</posx>
				  <posy>135</posy>
				  <width>950</width>
				  <height>350</height>
				  <visible>true</visible>
				  <colordiffuse>FFFFFFFF</colordiffuse>
				  <font>font13</font>
				  <textcolor>FFFFFFFF</textcolor>
				  <wrapmultiline>true</wrapmultiline>
				  <autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				  <label>$INFO[Window.Property(EPGDescription)]</label>
			</control>

			<control type="label" id="102">
				<posx>880</posx>
				<posy>102</posy>
				<description>start time</description>
				<font>font13</font>
				<label>$INFO[Window.Property(EPGTime)]</label>
			</control>				

			<control type="group">
				<control type="grouplist">
					<posx>400</posx>
					<posy>90</posy>
					<width>450</width>
					<height>40</height>
					<itemgap>25</itemgap>
					<align>right</align>
					<orientation>horizontal</orientation>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>60</width>
						<height>40</height>
						<texture>IconTeletext.png</texture>
						<visible>substring(Window.Property(HasTeletext),true)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>60</width>
						<height>40</height>
						<texture>IconSubtitle.png</texture>
						<visible>substring(Window.Property(HasSubtitle),true)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>4</posy>
						<width>122</width>
						<height>31</height>
						<texture>dolbydigital.png</texture>
						<visible>substring(Window.Property(HasDolby),true) + !Control.IsVisible(201)</visible>
					</control>
					<control type="image" id="201">
						<posx>0</posx>
						<posy>4</posy>
						<width>122</width>
						<height>31</height>
						<texture>dolbydigitalplus.png</texture>
						<visible>substring(Window.Property(HasDolbyPlus),true)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>90</width>
						<height>40</height>
						<texture>OverlayHD.png</texture>
						<visible>substring(Window.Property(HasHD),true)</visible>
					</control>
				</control>
			</control>

		</control>
	</controls>
</window>
