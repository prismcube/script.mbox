<window id="3026">
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
		<include>DefaultSettingHeaderWindow</include>
		<control type="group">
			<posx>90</posx>
			<posy>50</posy>
			<include>DefaultSettingWindowEffect</include>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1100</width>
				<height>640</height>
				<texture border="20">DialogBack.png</texture>
			</control>
			<control type="image">
				<description>LOGO</description>
				<posx>30</posx>
				<posy>15</posy>
				<width>220</width>
				<height>80</height>
				<aspectratio>keep</aspectratio>
				<texture>Confluence_Logo.png</texture>
			</control>
			<control type="list" id="9000">
				<hitrect x="10" y="82" w="260" h="541"></hitrect>
				<posx>10</posx>
				<posy>82</posy>
				<width>260</width>
				<height>541</height>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<pagecontrol>-</pagecontrol>
				<scrolltime>300</scrolltime>
				<itemlayout height="54" width="260">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>260</width>
						<height>55</height>
						<texture border="5">MenuItemNF.png</texture>
					</control>
					<control type="label">
						<posx>250</posx>
						<posy>0</posy>
						<width>380</width>
						<height>55</height>
						<font>font13_title</font>
						<textcolor>grey3</textcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="54" width="260">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>260</width>
						<height>55</height>
						<texture border="5">MenuItemFO.png</texture>
					</control>
					<control type="label">
						<posx>250</posx>
						<posy>0</posy>
						<width>380</width>
						<height>55</height>
						<font>font13_title</font>
						<textcolor>white</textcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>Weather</label>
						<!--label2>Desc Weather</label2-->
						<label2>Get current weather and a four day forcast for thousands of cities around the world</label2>
						<onclick>ActivateWindow(Weather)</onclick>
						<icon>special://skin/backgrounds/weather.jpg</icon>
					</item>
					<item id="2">
						<label>Pictures</label>
						<!--label2>Desc Picture</label2-->
						<label2>View your pictures as a slideshow with nice transition effects</label2>
						<onclick>ActivateWindow(Pictures)</onclick>
						<icon>special://skin/backgrounds/pictures.jpg</icon>
					</item>
					<item id="3">
						<label>Music</label>
						<!--label2>Desc Music</label2-->
						<label2>Organize your music collection by information stored in your music file ID tag, like title, artist, album, genre and popularity</label2>
						<onclick>ActivateWindow(Music)</onclick>
						<icon>special://skin/backgrounds/music.jpg</icon>
					</item>
					<item id="4">
						<label>Video</label>
						<!--label2>Desc Video</label2-->
						<label2>Organize your video content by information associated with the video files</label2>
						<onclick>ActivateWindow(Videos)</onclick>
						<icon>special://skin/backgrounds/videos.jpg</icon>
					</item>
					<item id="5">
						<label>Programs</label>
						<!--label2>Desc Programs</label2-->
						<label2>Add-ons are packages that add features and functions not normally included with the XBMC Media Center</label2>
						<onclick>ActivateWindow(Programs,Addons,return)</onclick>
						<icon>special://skin/backgrounds/programs.jpg</icon>
					</item>
					<item id="6">
						<label>Settings</label>
						<!--label2>Desc Settings</label2-->
						<label2>Most of the Media Center's settings can be configured via the GUI under Settings</label2>
						<onclick>ActivateWindow(Settings)</onclick>
						<icon>special://skin/backgrounds/settings.jpg</icon>
					</item>
					<item id="7">
						<label>File Manager</label>
						<!--label2>Desc File Manager</label2-->
						<label2>The File Manager lets you transfer, copy, delete and rename files and folders on your HDD, FTP-shares, etc</label2>
						<onclick>ActivateWindow(FileManager)</onclick>
						<icon>special://skin/backgrounds/appearance.jpg</icon>
					</item>
					<item id="8">
						<label>Profiles</label>
						<label2>Desc Profiles</label2>
						<onclick>ActivateWindow(Profiles)</onclick>
						<visible>false</visible>
						<icon>special://skin/backgrounds/pictures.jpg</icon>
					</item>
					<item id="9">
						<label>System Info</label>
						<!--label2>Desc System Info</label2-->
						<label2>System Info allows you to see your system status</label2>
						<onclick>ActivateWindow(SystemInfo)</onclick>
						<icon>special://skin/backgrounds/system.jpg</icon>
					</item>
				</content>
			</control>
			<control type="image">
				<posx>272</posx>
				<posy>62</posy>
				<width>796</width>
				<height>446</height>
				<aspectratio>stretch</aspectratio>
				<fadetime>600</fadetime>
				<texture background="true">$INFO[Container(9000).ListItem.Icon]</texture>
			</control>
			<control type="image">
				<posx>268</posx>
				<posy>10</posy>
				<width>804</width>
				<height>50</height>
				<texture border="5">black-back2.png</texture>
			</control>
			<control type="image">
				<posx>268</posx>
				<posy>10</posy>
				<width>804</width>
				<height>70</height>
				<aspectratio>stretch</aspectratio>
				<texture>GlassTitleBar.png</texture>
			</control>
			<control type="label">
				<description>header label</description>
				<posx>300</posx>
				<posy>20</posy>
				<width>740</width>
				<height>30</height>
				<font>font16caps</font>
				<!--label>Installation - $INFO[Container(9000).ListItem.Label]</label-->
				<label>Media Center - $INFO[Container(9000).ListItem.Label]</label>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="image">
				<posx>270</posx>
				<posy>60</posy>
				<width>800</width>
				<height>450</height>
				<texture border="5">button-nofocus.png</texture>
			</control>
			<control type="image">
				<posx>272</posx>
				<posy>62</posy>
				<width>600</width>
				<height>340</height>
				<aspectratio>stretch</aspectratio>
				<texture>GlassOverlay.png</texture>
				<colordiffuse>AAFFFFFF</colordiffuse>
			</control>
			<control type="image">
				<posx>268</posx>
				<posy>510</posy>
				<width>804</width>
				<height>118</height>
				<texture border="5">black-back2.png</texture>
			</control>
			<control type="textbox">
				<description>Appearance Description</description>
				<posx>300</posx>
				<posy>520</posy>
				<width>740</width>
				<height>100</height>
				<font>font12</font>
				<label>$INFO[Container(9000).ListItem.Label2]</label>
				<align>left</align>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
		</control>
	</controls>
</window>

