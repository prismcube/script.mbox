<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>335</posx>
			<posy>160</posy>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>610</width>
				<height>400</height>
				<include>DialogBackground</include>
			</control>
			<control type="label" id="301">
				<description>Title</description>
				<posx>20</posx>
				<posy>10</posy>
				<width>570</width>
				<height>60</height>
				<font>font15_title</font>
				<textcolor>grey3</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<scroll>true</scroll>
			</control>
			<control type="button" id="300">
				<description>Close</description>
				<posx>540</posx>
				<posy>30</posy>
				<width>20</width>
				<height>20</height>
				<texturefocus>close.png</texturefocus>
				<texturenofocus>close_nofocus.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
			</control>
			<control type="list" id="9000">
				<posx>20</posx>
				<posy>75</posy>
				<width>550</width>
				<height>240</height>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onleft>300</onleft>
				<onright>400</onright>
				<pagecontrol>400</pagecontrol>
				<scrolltime>200</scrolltime>
				<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(61)">Conditional</animation>
				<itemlayout height="40" width="550">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
						<texture border="0,2,0,2">MenuItemNF.png</texture>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>510</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="550">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
						<texture border="0,2,0,2">MenuItemNF.png</texture>
						<visible>!Control.HasFocus(9000)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
                        <texture border="4">listselect_fo.png</texture>
                        <visible>Control.HasFocus(9000)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>510</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="400">
				<posx>570</posx>
				<posy>60</posy>
				<width>18</width>
				<height>250</height>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<ondown>400</ondown>
				<onup>400</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="label" id="302">
				<posx>560</posx>
				<posy>325</posy>
				<width>540</width>
				<height>35</height>
				<font>font13</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>grey</textcolor>
			</control>
			<control type="label" id="303">
				<posx>560</posx>
				<posy>355</posy>
				<width>540</width>
				<height>35</height>
				<font>font13</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>grey</textcolor>
				<visible>false</visible>
			</control>
		</control>
	</controls>
</window>
