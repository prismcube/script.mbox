<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group" id="8000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<control type="image" id="9001">
				<posx>0</posx>
				<posy>-20</posy>
				<width>610</width>
				<height>550</height>
				<include>DialogBackground</include>
			</control>
			<include>DialogCommonSetting</include>
			<control type="group" id="9000">
				<posx>40</posx>

				<!-- Timer Mode -->
				<include>DialogSpinEx03</include>

				<!-- Recording Type -->
				<include>DialogSpinEx01</include>
				
				<!-- Recording Name -->
				<include>DialogInput01</include>

				<!-- Weekly -->
				<include>DialogSpinDay</include>

				<!-- Date -->
				<include>DialogSpinEx02</include>

				<!--Start Time -->
				<include>DialogInput02</include>

				<!--End Time -->
				<include>DialogInput03</include>

				<!-- Record path -->
				<include>DialogInput04</include>
				<control type="group">
					<posx>-15</posx>
					<posy>390</posy>
					<control type="group" id="300">
						<posx>0</posx>
						<posy>0</posy>
						<visible>substring(Window.Property(NetVolumeInfo),true)</visible>
						<control type="image">
							<posx>-30</posx>
							<posy>10</posy>
							<width>25</width>
							<height>25</height>
							<texture>connected.png</texture>
							<visible>substring(Window.Property(NetVolumeConnect),true)</visible>
						</control>
						<control type="image">
							<posx>-30</posx>
							<posy>10</posy>
							<width>25</width>
							<height>25</height>
							<visible>!substring(Window.Property(NetVolumeConnect),true)</visible>
							<texture>disconnected.png</texture>
						</control>
						<control type="progress" id="301">
							<description>Progressbar</description>
							<posx>0</posx>
							<posy>15</posy>
							<width>100</width>
							<height>16</height>
							<texturebg border="2">osd/texturebg2.png</texturebg>
						</control>
						<control type="label" id="302">
							<posx>110</posx>
							<posy>2</posy>
							<width>150</width>
							<height>40</height>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[Window.Property(NetVolumeUse)]</label>
							<textcolor>grey3</textcolor>
							<font>Font_Reg17</font>
						</control>
					</control>
				</control>
				<control type="group">
					<posx>0</posx>
					<posy>40</posy>
					<!-- OK/Cancel -->
					<include>DialogButtonOKCancel</include>
				</control>
			</control>
		</control>
	</controls>
</window>

