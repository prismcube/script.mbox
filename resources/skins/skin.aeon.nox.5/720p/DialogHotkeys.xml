						<align>center</align>
						<aligny>center</aligny>
						<textcolor>grey</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>		
				</itemlayout>
				<focusedlayout width="310" height="35">
					<control type="image">
						<posx>0</posx>
						<posy>1</posy>
						<width>310</width>
						<height>35</height>
						<texture border="5">button_middle3.png</texture>
