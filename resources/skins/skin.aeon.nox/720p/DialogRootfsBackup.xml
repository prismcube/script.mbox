				<posy>0</posy>
				<width>610</width>
				<height>320</height>
				<texture>dialogs/dialog_back.png</texture>
				<colordiffuse>$VAR[DialogColorVar]</colordiffuse>
			</control>
			<control type="label" id="200">
				<description>Title</description>
				<posx>20</posx>
				<posy>5</posy>
				<width>570</width>
				<height>60</height>
				<textcolor>FF6db9e5</textcolor>
				<align>center</align>
				<scroll>true</scroll>
				<textoffsetx>45</textoffsetx>
			</control>
			<control type="image">
				<posx>20</posx>
				<posy>8</posy>
				<width>570</width>
				<height>43</height>
