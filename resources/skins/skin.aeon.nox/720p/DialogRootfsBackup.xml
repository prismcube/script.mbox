			</control>
			<control type="progress" id="400">
				<posx>30</posx>
				<posy>228</posy>
				<width>550</width>
				<height>15</height>
			</control>
			<control type="button" id="300">
				<description>Cancel</description>
				<posx>215</posx>
				<posy>255</posy>
				<width>180</width>
				<height>35</height>
