                <font>Font_Reg19</font>
                <textcolor>white3</textcolor>
                <focusedcolor>white3</focusedcolor>
                <align>center</align>
				<textoffsetx>30</textoffsetx>
				<onleft>301</onleft>
				<onright>301</onright>
				<onup>301</onup>
				<ondown>301</ondown>
			</control>
