<window>
	<defaultcontrol always="true">102</defaultcontrol>
	<onload>SetProperty(ItemHeight,36)</onload>					<!--Input Item Height-->
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>600</posx>
			<posy>200</posy>
			<include>DefaultDialogCloseEffect</include>
			<control type="image">
				<description>Dialog Top Image</description>
				<posx>0</posx>
				<posy>-30</posy>
				<width>365</width>
				<height>30</height>
				<colordiffuse>$VAR[SpotColorVar2]</colordiffuse>
				<texture>$VAR[ContextTopVar]</texture>
			</control>
			<control type="image" id="100">
				<description>Dialog Middle Image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>365</width>
				<colordiffuse>$VAR[SpotColorVar2]</colordiffuse>
				<texture>$VAR[ContextMiddleVar]</texture>
			</control>
			<control type="image" id="101">
				<description>Dialog Bottom Image</description>
				<posx>0</posx>
				<width>365</width>
				<height>25</height>
				<colordiffuse>$VAR[SpotColorVar2]</colordiffuse>
				<texture>$VAR[ContextBottomVar]</texture>
			</control>
			<control type="list" id="102">
				<posx>18</posx>
				<posy>3</posy>
				<width>330</width>
				<height>520</height>						<!--Change Property ItemHeight * MAX_ITEM(13) -->
				<onup>102</onup>
				<ondown>102</ondown>
				<onleft>103</onleft>
				<onright>103</onright>
				<itemlayout width="330" height="36" >		<!--Change Property ItemHeight-->
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>330</width>
						<height>35</height>					<!--Change Property ItemHeight-->
						<texture border="5">button-nofocus.png</texture>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<!-- is mark? -->					
					<control type="image">
						<posx>5</posx>
						<posy>10</posy>
						<width>20</width>
						<height>20</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(mark),true)</visible>
					</control>
					<control type="label">
						<posx>160</posx>
						<posy>0</posy>
						<width>330</width>
						<height>35</height>					<!--Change Property ItemHeight-->
						<font>fontContextMenu</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>		
				</itemlayout>
				<focusedlayout width="330" height="36">		<!--Change Property ItemHeight-->
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>330</width>
						<height>35</height>
                        <texture>views/tripanel/listselect_fo.png</texture>
                        <colordiffuse>$VAR[FocusTextureColorVar]</colordiffuse>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<!-- is mark? -->
					<control type="image">
						<posx>5</posx>
						<posy>10</posy>
						<width>20</width>
						<height>20</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(mark),true)</visible>
					</control>
					<control type="label">
						<posx>160</posx>
						<posy>0</posy>
						<width>330</width>
						<height>35</height>					<!--Change Property ItemHeight-->
						<font>fontContextMenu</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
