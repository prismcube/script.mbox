<window>
	<defaultcontrol always="true">9001</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<include>DefaultDialogCloseEffect</include>
			<posx>340</posx>
			<posy>60</posy>
			<control type="image">
				<posx>0</posx>
				<posy>-20</posy>
				<width>610</width>
				<height>625</height>
				<texture>dialogs/dialog_back.png</texture>
				<colordiffuse>$VAR[DialogColorVar]</colordiffuse>
			</control>
			<control type="image">
				<posx>20</posx>
				<width>570</width>
				<height>43</height>
				<texture>osd/osd_settings_buttonnf.png</texture>
			</control>
			<control type="label" id="101">
				<description>Title</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>610</width>
				<height>60</height>
				<font>Font_Reg19</font>
				<textcolor>FF6db9e5</textcolor>
				<label>$INFO[Control.GetLabel]</label>
				<align>center</align>
				<scroll>true</scroll>
				<textoffsetx>45</textoffsetx>
			</control>

			<control type="button" id="109">
				<description>Close</description>
				<posx>550</posx>
				<posy>20</posy>
				<width>20</width>
				<height>20</height>
				<texturefocus>special://skin/media/close.png</texturefocus>
				<texturenofocus>close_nofocus.png</texturenofocus>
				<onleft>9001</onleft>
				<onright>8001</onright>
				<onup>100</onup>
				<ondown>9001</ondown>
			</control>	

			<control type="list" id="9001">
				<posx>30</posx>
				<posy>60</posy>
				<width>600</width>
				<height>420</height>
				<onleft>100</onleft>
				<onright>8001</onright>
				<onup>9001</onup>
				<ondown>9001</ondown>
				<pagecontrol>8001</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>0</focusposition>
				<movement>2</movement>
				<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(8001)">Conditional</animation>
				<itemlayout height="70" width="590">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>530</width>
						<height>68</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
					<!-- Item Selection -->					
					<control type="image">
						<posx>0</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>
					<!-- Channel Name -->
					<control type="label">
						<posx>40</posx>
						<posy>0</posy>
						<width>360</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Record Name -->
					<control type="label">
						<posx>40</posx>
						<posy>30</posy>
						<width>360</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<!-- Start Time -->
					<control type="label">
						<posx>500</posx>
						<posy>0</posy>
						<width>250</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>						
						<label>$INFO[ListItem.Property(StartTime)]</label>
					</control>
					<!-- Duration -->
					<control type="label">
						<posx>500</posx>
						<posy>30</posy>
						<width>200</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(Duration)]</label>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="590">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>530</width>
						<height>68</height>
						<texture border="5">StackFO_white2.png</texture>
						<include>DefaultVisibleFadeEffect</include>
					</control>
					<!-- Item Selection -->					
					<control type="image">
						<posx>0</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>
					<!-- Channel Name -->
					<control type="label">
						<posx>40</posx>
						<posy>0</posy>
						<width>360</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Record Name -->
					<control type="label">
						<posx>40</posx>
						<posy>30</posy>
						<width>360</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
					<!-- Start Time -->
					<control type="label">
						<posx>500</posx>
						<posy>0</posy>
						<width>250</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>						
						<label>$INFO[ListItem.Property(StartTime)]</label>
					</control>
					<!-- Duration -->
					<control type="label">
						<posx>500</posx>
						<posy>30</posy>
						<width>200</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>white</textcolor>
						<selectedcolor>white</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(Duration)]</label>
					</control>
				</focusedlayout>
			</control>

			<control type="scrollbar" id="8001">
				<posx>575</posx>
				<posy>60</posy>
				<width>25</width>
				<height>420</height>
				<include>DefaultWindowFade</include>
	            <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
				<texturesliderbar>-</texturesliderbar>
				<texturesliderbarfocus>-</texturesliderbarfocus>
				<textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
				<textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
				<colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<ondown></ondown>
				<onup></onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>

			<!-- Item & Page Number -->
			<control type="label">
				<posx>555</posx>
				<posy>480</posy>
				<width>300</width>
				<height>35</height>
				<font>Font_Reg17</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>grey</textcolor>
				<label>([COLOR=FF6db9e5]$INFO[Window.Property(SelectedPosition)][/COLOR]) $ADDON[script.mbox 1106] - $ADDON[script.mbox 1107] ([COLOR=FF6db9e5]$INFO[Container(9001).CurrentPage]/$INFO[Container(9001).NumPages][/COLOR])</label>
				<visible>Control.IsVisible(9001)</visible>
			</control>

			<control type="button" id="100">
				<description>OK</description>
				<posx>30</posx>
				<posy>490</posy>
				<width>180</width>
				<height>35</height>
				<label>$ADDON[script.mbox 1022</label>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                <font>Font_Reg19</font>
                <textcolor>grey2</textcolor>
                <focusedcolor>white3</focusedcolor>
                <align>center</align>
				<textoffsetx>30</textoffsetx>
				<onleft>9001</onleft>
				<onright>8001</onright>
				<onup>9001</onup>
				<ondown>3800</ondown>
			</control>

			<!-- Hotkey -->
			<control type="group">
				<posx>30</posx>
				<posy>535</posy>
				<control type="image">
					<posx>0</posx>
					<posy>3</posy>
					<width>25</width>
					<height>25</height>
					<texture flipx="true">OSDPlayNF.png</texture>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>0</posy>
					<width>570</width>
					<height>30</height>
					<font>Font_Reg14</font>
					<align>left</align>
					<scroll>true</scroll>
					<textcolor>grey2</textcolor>
					<label>$ADDON[script.mbox 1138]</label>
				</control>
			</control>
		</control>
	</controls>
</window>

