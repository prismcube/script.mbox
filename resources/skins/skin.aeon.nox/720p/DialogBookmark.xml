<window>
	<defaultcontrol always="true">3850</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="8000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<include>DefaultDialogCloseEffect</include>
			<posx>360</posx>
			<posy>60</posy>
			<control type="image">
				<posx>0</posx>
				<posy>-20</posy>
				<width>610</width>
				<height>625</height>
				<texture>dialogs/dialog_back.png</texture>
				<colordiffuse>$VAR[DialogColorVar]</colordiffuse>
			</control>
			<control type="image">
				<posx>20</posx>
				<width>570</width>
				<height>43</height>
				<texture>osd/osd_settings_buttonnf.png</texture>
			</control>
			<control type="label" id="3801">
				<description>Title</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>610</width>
				<height>60</height>
				<font>Font_Reg19</font>
				<textcolor>FF6db9e5</textcolor>
				<label>$INFO[Control.GetLabel]</label>
				<align>center</align>
				<textoffsetx>45</textoffsetx>
			</control>

			<control type="button" id="3800">
				<description>Close</description>
				<posx>550</posx>
				<posy>20</posy>
				<width>20</width>
				<height>20</height>
				<texturefocus>special://skin/media/close.png</texturefocus>
				<texturenofocus>close_nofocus.png</texturenofocus>
				<onleft>3850</onleft>
				<onright>3851</onright>
				<onup>3802</onup>
				<ondown>3850</ondown>
			</control>

			<control type="label" id="3805">
				<posx>20</posx>
				<posy>70</posy>
				<width>570</width>
				<height>30</height>
				<font>Font_Reg19</font>
				<label>$INFO[Control.GetLabel]</label>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="3803">
				<textcolor>grey2</textcolor>
				<label>$INFO[Control.GetLabel]</label>
				<visible>false</visible>
			</control>

			<control type="list" id="3850">
				<posx>20</posx>
				<posy>120</posy>
				<width>600</width>
				<height>350</height>
				<onleft>3802</onleft>
				<onright>3851</onright>
				<onup>3850</onup>
				<ondown>3850</ondown>
				<pagecontrol>3851</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>0</focusposition>
				<movement>2</movement>
				<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(3851)">Conditional</animation>
				<itemlayout height="70" width="590">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>530</width>
						<height>71</height>
						<texture border="0,2,0,2">MenuItemNF.png</texture>
					</control>
					<!-- Thumbnail and Lock -->
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>112</width>
						<height>63</height>
						<texture>$INFO[ListItem.Property(RecIcon)]</texture>
					</control>
					<!-- Item Selection -->					
					<control type="image">
						<posx>0</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>112</width>
						<height>63</height>
						<aspectratio>stretch</aspectratio>
						<texture>black-back.png</texture>
						<colordiffuse>AAFFFFFF</colordiffuse>
					</control>
					<!-- Bookmark Offset-->
					<control type="label">
						<posx>220</posx>
						<posy>0</posy>
						<width>200</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Total -->
					<control type="label">
						<posx>320</posx>
						<posy>0</posy>
						<width>210</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>/ $INFO[ListItem.Property(RecTotal)]</label>
					</control>
					<control type="progress">
						<posx>150</posx>
						<posy>45</posy>
						<width>380</width>
						<height>18</height>
						<progress>percent</progress>
						<visible>substring(ListItem.Property(iPos),true)</visible>
					</control>
					<!-- Recording Date -->
					<control type="label">
						<posx>530</posx>
						<posy>0</posy>
						<width>210</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(RecDate)]</label>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="590">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>71</height>
						<texture border="0,2,0,2">MenuItemNF.png</texture>
						<include>DefaultVisibleFadeEffect</include>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>76</height>
						<texture border="6">views/tripanel/listselect_fo.png</texture>
						<texturenofocus>-</texturenofocus>
						<colordiffuse>$VAR[FocusTextureColorVar]</colordiffuse>
						<include>DefaultVisibleFadeEffect</include>
					</control>
					<!-- Thumbnail and Lock -->
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>112</width>
						<height>63</height>
						<texture>$INFO[ListItem.Property(RecIcon)]</texture>
					</control>
					<!-- Item Selection -->
					<control type="image">
						<posx>0</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>
					<!-- Bookmark Offset-->
					<control type="label">
						<posx>220</posx>
						<posy>0</posy>
						<width>200</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Total -->
					<control type="label">
						<posx>320</posx>
						<posy>0</posy>
						<width>210</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>/ $INFO[ListItem.Property(RecTotal)]</label>
					</control>
					<control type="progress">
						<description>progress control</description>
						<posx>150</posx>
						<posy>45</posy>
						<width>380</width>
						<height>18</height>
						<progress>percent</progress>
						<visible>substring(ListItem.Property(iPos),true)</visible>
					</control>
					<!-- Recording Date -->
					<control type="label">
						<posx>530</posx>
						<posy>0</posy>
						<width>210</width>
						<height>30</height>
						<font>Font_Reg19</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(RecDate)]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="3851">
				<posx>575</posx>
				<posy>120</posy>
				<width>25</width>
				<height>350</height>
				<include>DefaultWindowFade</include>
	            <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
				<texturesliderbar>-</texturesliderbar>
				<texturesliderbarfocus>-</texturesliderbarfocus>
				<textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
				<textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
				<colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
				<onleft>3850</onleft>
				<onright>3850</onright>
				<ondown></ondown>
				<onup></onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>

			<!-- Item & Page Number -->
			<control type="label">
				<posx>555</posx>
				<posy>480</posy>
				<width>300</width>
				<height>35</height>
				<font>Font_Reg17</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>grey</textcolor>
				<label>([COLOR=FF6db9e5]$INFO[Control.GetLabel(3803)][/COLOR]) $ADDON[script.mbox 1106] - $ADDON[script.mbox 1107] ([COLOR=FF6db9e5]$INFO[Container(3850).CurrentPage]/$INFO[Container(3850).NumPages][/COLOR])</label>
				<visible>Control.IsVisible(3850)</visible>
			</control>

			<control type="button" id="3802">
				<description>OK</description>
				<posx>30</posx>
				<posy>490</posy>
				<width>180</width>
				<height>40</height>
				<label>$ADDON[script.mbox 1022]</label>
                <colordiffuse>$VAR[ColorDiffuseVar]</colordiffuse>
                <font>Font_Reg19</font>
                <textcolor>grey2</textcolor>
                <focusedcolor>white3</focusedcolor>
                <align>center</align>
				<textoffsetx>30</textoffsetx>
				<onleft>3850</onleft>
				<onright>3851</onright>
				<onup>3850</onup>
				<ondown>3800</ondown>
			</control>

			<!-- Hotkey -->
			<control type="group">
				<posx>30</posx>
				<posy>535</posy>
				<control type="image">
					<posx>0</posx>
					<posy>3</posy>
					<width>25</width>
					<height>25</height>
					<texture flipx="true">OSDPlayNF.png</texture>
				</control>
				<control type="label">
					<posx>30</posx>
					<posy>0</posy>
					<width>570</width>
					<height>30</height>
					<font>Font_Reg14</font>
					<align>left</align>
					<scroll>true</scroll>
					<textcolor>grey2</textcolor>
					<label>$ADDON[script.mbox 1138]</label>
				</control>
			</control>
		</control>
	</controls>
</window>
