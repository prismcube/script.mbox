<window>
	<defaultcontrol always="true">301</defaultcontrol>
	<onload>SetProperty(ItemHeight,40)</onload>
	<allowoverlay>yes</allowoverlay>
	<include>DefaultDialogOpenEffect</include>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>600</posx>
			<posy>200</posy>
			<include>DefaultDialogCloseEffect</include>
			<control type="image">
				<description>background top image</description>
				<posx>0</posx>
				<posy>-30</posy>
				<width>370</width>
				<height>30</height>
				<colordiffuse>$VAR[SpotColorVar2]</colordiffuse>
				<texture>$VAR[ContextTopVar]</texture>
			</control>
			<control type="image" id="100">
				<description>background middle image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>370</width>
				<colordiffuse>$VAR[SpotColorVar2]</colordiffuse>
				<texture>$VAR[ContextMiddleVar]</texture>
			</control>
			<control type="image" id="101">
				<description>background bottom image</description>
				<posx>0</posx>
				<width>370</width>
				<height>25</height>
				<colordiffuse>$VAR[SpotColorVar2]</colordiffuse>
				<texture>$VAR[ContextBottomVar]</texture>
			</control>
			<control type="list" id="102">
				<posx>20</posx>
				<posy>0</posy>
				<width>330</width>
				<height>480</height>						<!--Change Property ItemHeight * MAX_ITEM(12) -->
				<itemlayout width="310" height="40" >
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>330</width>
						<height>38</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon1)]</texture>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon2)]</texture>
					</control>
					<control type="label">
						<posx>165</posx>
						<posy>0</posy>
						<width>330</width>
						<height>38</height>
						<font>fontContextMenu</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>		
				</itemlayout>
				<focusedlayout width="310" height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>330</width>
						<height>38</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon1)]</texture>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon2)]</texture>
					</control>
					<control type="label">
						<posx>165</posx>
						<posy>0</posy>
						<width>330</width>
						<height>38</height>
						<font>fontContextMenu</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
