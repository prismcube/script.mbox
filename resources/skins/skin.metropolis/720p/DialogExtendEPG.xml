<window>
	<defaultcontrol always="true">302</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group" id="300">
		<include>DefaultDialogCloseEffect</include>			
			<posx>82</posx>
			<posy>15</posy>
			<control type="image">
				<description>background image</description>
				<posx>-4</posx>
				<posy>-33</posy>
				<width>1120</width>
				<height>580</height>
				<texture>frames/Dialog_Glass2PanelLarge.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="group">
				<control type="button" id="301">
					<description>Prev button</description>
					<posx>80</posx>
					<posy>448</posy>
					<width>60</width>
					<height>50</height>
					<texturenofocus border="5">Arrow-left.png</texturenofocus>
					<texturefocus border="5">Arrow-left-focus.png</texturefocus>
					<onleft></onleft>
					<onright>302</onright>
					<ondown>110</ondown>
					<onup>110</onup>
					<visible>substring(Window.Property(EPGPrev),true)</visible>
				</control>
				<control type="button" id="302">
					<description>Next button</description>
					<posx>970</posx>
					<posy>448</posy>
					<width>60</width>
					<height>50</height>
					<texturenofocus border="5">Arrow-right.png</texturenofocus>
					<texturefocus border="5">Arrow-right-focus.png</texturefocus>
					<onleft>301</onleft>
					<onright></onright>
					<ondown>110</ondown>
					<onup>110</onup>
					<visible>substring(Window.Property(EPGNext),true)</visible>
				</control>
				<control type="label">
					<posx>130</posx>
					<posy>458</posy>
					<width>100</width>
					<height>40</height>
					<font>METF_HelpText</font>
					<textcolor>FFc89008</textcolor>
					<align>left</align>
					<aligny>center</aligny>
					<label>$ADDON[script.mbox 1091]</label>
					<visible>Control.IsVisible(301)</visible>
				</control>
				<control type="label">
					<posx>970</posx>
					<posy>458</posy>
					<width>100</width>
					<height>40</height>
					<font>METF_HelpText</font>
					<textcolor>FFc89008</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>$ADDON[script.mbox 1092]</label>
					<visible>Control.IsVisible(302)</visible>
				</control>
				<control type="label">
					<posx>520</posx>
					<posy>458</posy>
					<width>200</width>
					<height>40</height>
					<font>METF_DialogLarge</font>
					<textcolor>FFc89008</textcolor>
					<aligny>center</aligny>
					<label>$INFO[Window.Property(EPGIndex)]</label>
					<visible>Control.IsVisible(301) | Control.IsVisible(302)</visible>
				</control>
			</control>

			<control type="label" id="100">
				  <description>EPG Title</description>
				  <posx>80</posx>
				  <posy>30</posy>
				  <width>950</width>
				  <height>100</height>
				  <visible>true</visible>
				  <font>METF_MusicVizTitle</font>
				  <textcolor>white</textcolor>
				  <label>$INFO[Window.Property(EPGTitle)]</label>
			</control>

			<control type="textbox" id="101">
				  <description>EPG Description</description>
				  <posx>80</posx>
				  <posy>135</posy>
				  <width>950</width>
				  <height>320</height>
				  <visible>true</visible>
				  <font>METF_DialogLarge</font>
				  <textcolor>white</textcolor>
				  <wrapmultiline>true</wrapmultiline>
				  <pagecontrol>110</pagecontrol>
				  <autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(110)</autoscroll>
				  <label>$INFO[Window.Property(EPGDescription)]</label>
			</control>
			<!-- Scrollbar -->
			<control type="scrollbar" id="110">
				<posx>1043</posx>
				<posy>135</posy>
				<width>25</width>
				<height>321</height>
				<include>DefaultWindowFade</include>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft></onleft>
				<onright></onright>
				<ondown></ondown>
				<onup></onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="label" id="102">
				<posx>830</posx>
				<posy>102</posy>
				<description>start time</description>
				<font>METF_HeadingDetails</font>
				<label>$INFO[Window.Property(EPGTime)]</label>
			</control>
			<control type="label">
				<posx>830</posx>
				<posy>82</posy>
				<description>epg date</description>
				<font>METF_HeadingDetails</font>
				<label>$INFO[Window.Property(EPGDate)]</label>
			</control>
			<control type="label">
				<posx>970</posx>
				<posy>102</posy>
				<description>epg duration</description>
				<font>METF_HeadingDetails</font>
				<label>$INFO[Window.Property(EPGDuration)]</label>
			</control>

			<control type="group">
				<control type="grouplist">
					<posx>300</posx>
					<posy>90</posy>
					<width>510</width>
					<height>40</height>
					<itemgap>25</itemgap>
					<align>right</align>
					<orientation>horizontal</orientation>
					<control type="group">
						<width>60</width>
						<height>40</height>
						<visible>substring(Window.Property(HasAgeRating),true)</visible>
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>60</width>
							<height>40</height>
							<texture>ageIcon.png</texture>
						</control>
						<control type="label">
							<posx>18</posx>
							<posy>6</posy>
							<width>50</width>
							<height>10</height>
							<font>font15</font>
							<label>[B]$INFO[Window.Property(EPGAgeRating)][/B]</label>
						</control>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>60</width>
						<height>40</height>
						<texture>IconTeletext.png</texture>
						<visible>substring(Window.Property(HasTeletext),true)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>60</width>
						<height>40</height>
						<texture>IconSubtitle.png</texture>
						<visible>substring(Window.Property(HasSubtitle),true)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>4</posy>
						<width>105</width>
						<height>33</height>
						<texture>dolbydigital1.png</texture>
						<visible>substring(Window.Property(HasDolby),true) + !Control.IsVisible(201)</visible>
					</control>
					<control type="image" id="201">
						<posx>0</posx>
						<posy>4</posy>
						<width>105</width>
						<height>33</height>
						<texture>dolbydigitalplus1.png</texture>
						<visible>substring(Window.Property(HasDolbyPlus),true)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>90</width>
						<height>40</height>
						<texture>OverlayHD.png</texture>
						<visible>substring(Window.Property(HasHD),true)</visible>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
