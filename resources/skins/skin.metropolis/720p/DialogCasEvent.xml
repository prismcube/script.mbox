<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<include>DefaultDialogCloseEffect</include>
			<posx>318</posx>
			<posy>120</posy>
			<control type="image">
				<posx>0</posx>
				<posy>-20</posy>
				<width>640</width>
				<height>450</height>
				<texture>frames/Menu_Glass2c.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="button" id="300">
				<description>Close Window button</description>
				<posx>575</posx>
				<posy>18</posy>
				<width>25</width>
				<height>25</height>
				<label>-</label>
				<font>-</font>
				<texturefocus>new/exitbuttonFO.png</texturefocus>
				<texturenofocus>new/exitbutton.png</texturenofocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
			</control>
			<control type="label" id="301">
				<description>Title</description>
				<posx>80</posx>
				<posy>21</posy>
				<width>440</width>
				<height>30</height>
				<font>METF_Menu</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>DialogTextFO</textcolor>
				<scroll>true</scroll>
			</control>
			<control type="list" id="9000">
				<posx>30</posx>
				<posy>65</posy>
				<width>550</width>
				<height>240</height>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<onleft>300</onleft>
				<onright>400</onright>
				<pagecontrol>400</pagecontrol>
				<scrolltime>200</scrolltime>
				<animation effect="slide" start="0,0" end="10,0" time="0" condition="!Control.IsVisible(61)">Conditional</animation>
				<itemlayout height="40" width="550">
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>510</width>
						<height>40</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="550">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
						<texture border="1">ButtonFO2Wide.png</texture>
						<visible>Control.HasFocus(9000)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="label">
						<posx>15</posx>
						<posy>0</posy>
						<width>510</width>
						<height>40</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="400">
				<posx>570</posx>
				<posy>60</posy>
				<width>25</width>
				<height>250</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV_Default.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">ScrollBarV_bar_Default.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus_Default.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib_Default.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib_Default.png</textureslidernibfocus>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<ondown>400</ondown>
				<onup>400</onup>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="label" id="302">
				<posx>580</posx>
				<posy>310</posy>
				<width>540</width>
				<height>35</height>
				<font>METF_SettingsDetail</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>white</textcolor>
			</control>
			<control type="label" id="303">
				<posx>580</posx>
				<posy>340</posy>
				<width>540</width>
				<height>35</height>
				<font>METF_SettingsDetail</font>
				<align>right</align>
				<aligny>center</aligny>
				<scroll>true</scroll>
				<textcolor>white</textcolor>
			</control>
		</control>
	</controls>
</window>
