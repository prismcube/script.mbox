					<!-- Thumbnail and Lock -->
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>112</width>
						<height>63</height>
						<texture>$INFO[ListItem.Property(RecIcon)]</texture>
					</control>
					<!-- Selection Icon -->					
					<control type="image">
						<posx>0</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(iMark),True)</visible>
					</control>

					<!-- Bookmark Time -->
					<control type="label">
						<posx>220</posx>
						<posy>5</posy>
						<width>200</width>
						<height>30</height>
						<font>METF_DialogLarge</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Total -->
					<control type="label">
						<posx>320</posx>
						<posy>5</posy>
						<width>210</width>
						<height>30</height>
						<font>METF_DialogLarge</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>/ $INFO[ListItem.Property(RecTotal)]</label>
					</control>
					<control type="progress">
						<posx>130</posx>
						<posy>45</posy>
						<width>380</width>
						<height>18</height>
						<texturebg>osd/osd_progress_back2.png</texturebg>
						<lefttexture>osd/osd_progress_left2.png</lefttexture>
						<midtexture>osd/osd_progress_mid2.png</midtexture>
						<righttexture>osd/osd_progress_right2.png</righttexture>
						<colordiffuse>DialogProgressBar</colordiffuse>
						<progress>percent</progress>
						<visible>substring(ListItem.Property(iPos),true)</visible>
					</control>

					<!-- Recording Date -->
					<control type="label">
						<posx>510</posx>
						<posy>5</posy>
						<width>210</width>
						<height>30</height>
						<font>METF_HeadingDetails</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Property(RecDate)]</label>
