<window>
	<defaultcontrol always="true">301</defaultcontrol>
	<onload>SetProperty(ItemHeight,40)</onload>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>600</posx>
			<posy>200</posy>
			<include>DefaultDialogCloseEffect</include>
			<control type="image">
				<description>background top image</description>
				<posx>0</posx>
				<posy>-30</posy>
				<width>370</width>
				<height>30</height>
				<texture>dialogs/ContextMenu_Top.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="image" id="100">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>370</width>
				<texture>dialogs/ContextMenu_Middle.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="image" id="101">
				<description>background bottom image</description>
				<posx>0</posx>
				<width>370</width>
				<height>30</height>
				<texture>dialogs/ContextMenu_Bottom.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="list" id="102">
				<posx>30</posx>
				<posy>5</posy>
				<width>310</width>
				<height>480</height>						<!--Change Property ItemHeight * MAX_ITEM(12) -->
				<itemlayout width="310" height="40" >
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>310</width>
						<height>38</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon1)]</texture>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon2)]</texture>
					</control>
					<control type="label">
						<posx>165</posx>
						<posy>0</posy>
						<width>310</width>
						<height>38</height>
						<font>METF_MediaDetailsSmall</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>		
				</itemlayout>
				<focusedlayout width="310" height="40">
					<control type="image">
						<posx>0</posx>
						<posy>1</posy>
						<width>310</width>
						<height>38</height>
						<texture border="5">button-nofocus.png</texture>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon1)]</texture>
					</control>
					<control type="image">
						<posx>38</posx>
						<posy>0</posy>
						<width>38</width>
						<height>38</height>
						<texture>$INFO[ListItem.Property(KeyIcon2)]</texture>
					</control>
					<control type="label">
						<posx>165</posx>
						<posy>0</posy>
						<width>310</width>
						<height>38</height>
						<font>METF_MediaDetailsSmall</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
			<control type="button" id="301">
				<description>OK button</description>
				<width>190</width>
				<height>40</height>
				<font>METF_DialogLargeBold</font>
				<textcolor>white</textcolor>
				<focusedcolor>DialogTextFO</focusedcolor>
				<align>center</align>
				<texturefocus>ButtonFO2.png</texturefocus>
				<label>$ADDON[script.mbox 1022]</label>
			</control>
		</control>
	</controls>
</window>
