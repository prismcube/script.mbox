<window>
	<defaultcontrol always="true">102</defaultcontrol>
	<onload>SetProperty(ItemHeight,36)</onload>					<!--Input Item Height-->
	<allowoverlay>yes</allowoverlay>
	<controls>
		<control type="group" id="9000">
			<visible>substring(Window.Property(DialogDrawFinished),True)</visible>
			<posx>600</posx>
			<posy>200</posy>
			<include>DefaultDialogCloseEffect</include>
			<control type="image">
				<description>background top image</description>
				<posx>0</posx>
				<posy>-30</posy>
				<width>425</width>
				<height>30</height>
				<texture>dialogs/ContextMenu_Top.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="button" id="103">
				<description>Close Window button</description>
				<posx>378</posx>
				<posy>-17</posy>
				<width>15</width>
				<height>15</height>
				<onup>102</onup>
				<ondown>102</ondown>
				<onleft>102</onleft>
				<onright>102</onright>
				<label>-</label>
				<font>-</font>
				<texturefocus>new/exitbuttonFO.png</texturefocus>
				<texturenofocus>new/exitbutton.png</texturenofocus>
			</control>
			<control type="image" id="100">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>425</width>
				<texture>dialogs/ContextMenu_Middle.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="image" id="101">
				<description>background bottom image</description>
				<posx>0</posx>
				<width>425</width>
				<height>30</height>
				<texture>dialogs/ContextMenu_Bottom.png</texture>
				<colordiffuse>DialogBackgroundColor</colordiffuse>
			</control>
			<control type="list" id="102">
				<posx>33</posx>
				<posy>1</posy>
				<width>358</width>
				<height>520</height>						<!--Change Property ItemHeight * MAX_ITEM(13) -->
				<onup>102</onup>
				<ondown>102</ondown>
				<onleft>103</onleft>
				<onright>103</onright>
				<itemlayout width="350" height="36" >		<!--Change Property ItemHeight-->
					<!-- Selection Icon -->
					<control type="image">
						<posx>5</posx>
						<posy>10</posy>
						<width>20</width>
						<height>20</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(mark),true)</visible>
					</control>
					<control type="label">
						<posx>179</posx>
						<posy>0</posy>
						<width>400</width>
						<height>35</height>					<!--Change Property ItemHeight-->
						<font>METF_PlotTextMedium</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>		
				</itemlayout>
				<focusedlayout width="350" height="36">		<!--Change Property ItemHeight-->
					<control type="image">
						<posx>2</posx>
						<posy>0</posy>
						<width>355</width>
						<height>36</height>					<!--Change Property ItemHeight-->
						<texture border="1">ButtonFO2Wide.png</texture>
						<animation effect="fade" start="100" end="20" time="100" condition="!Control.HasFocus(102)">Conditional</animation>
					</control>
					<!-- Selection Icon -->
					<control type="image">
						<posx>5</posx>
						<posy>10</posy>
						<width>20</width>
						<height>20</height>
						<texture>OverlayWatched.png</texture>
						<visible>substring(ListItem.Property(mark),true)</visible>
					</control>
					<control type="label">
						<posx>179</posx>
						<posy>0</posy>
						<width>395</width>
						<height>35</height>					<!--Change Property ItemHeight-->
						<font>METF_PlotTextMedium</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>white</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<scroll>true</scroll>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>
